{
    "name": "ghazniali95/shopifyconnector",
    "description": "Connects and Performs operations for shopify.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ShopifyConnector\\": "src"
        }
    },
    "authors": [
        {
            "name": "Ghazni Ali",
            "email": "ghazniali95@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "ShopifyConnector\\App\\Providers\\ShopifyConnectorProvider"
            ],
            "aliases": {
                "Calculator": "ShopifyConnector\\App\\Facades\\ShopifyService"
            }
        }
    },
    "require": {
        "shopify/shopify-api": "dev-main"
    },
    "require-dev": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4.4",
        "illuminate/support": "^8|^9|^10",
        "phpunit/phpunit": "9.6.x-dev"
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "@php artisan ShopifyConnector:install --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ShopifyConnector:install --ansi"
        ]
    }

}
